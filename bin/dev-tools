set -e

TOP_DIR=$(cd $(dirname $(dirname $0)) && pwd)

usage() {

    cat << EOM
        Usage:
            $0 [-p] [-t] [-l] [-a]
        Options:
            -h           print help text
            -p           build protobuf modules using docker containers
            -l           lint source code
            -t           run unit and integration tests
            -a           protogen, lint, tests in order
EOM

}


info() {
    echo -e "\033[0;36m\n[--- $1 ---]\n\033[0m"
}

protogen() {
    info "Building Protobuf modules"
    docker build . -f build/Dockerfile -t mktplace-test-env
    docker run --rm -v $(pwd):/project/sawtooth-marketplace mktplace-test-env bin/protogen
}

run_tests() {
    info "Running Tests"
    docker build . -f build/Dockerfile -t mktplace-test-env
    docker run --rm -v $(pwd):/project/sawtooth-marketplace mktplace-test-env bin/run_unit_tests

}

lint() {
    info "Running lint"
    docker build . -f build/Dockerfile -t mktplace-test-env
    docker run --rm -v $(pwd):/project/sawtooth-marketplace mktplace-test-env bin/run_lint
}

while getopts hplta opt;
do
    case $opt in
        h)
            usage
            exit 0
            ;;
        p)
            protogen
            ;;
        t)
            run_tests
            ;;
        l)
            lint
            ;;
        a)
            protogen
            lint
            run_tests
            ;;

        \?)
            usage
            exit 1
            ;;
    esac
done

if [ $OPTIND -eq 1 ]; then
    usage
    exit 1
fi
